<div class="content container mt-5 mb-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-5">{{title}}</h1>
        </div>
        <div class="col-12 mx-auto">
            {{#if error}}
                <div class="alert alert-danger">
                    {{error}}
                </div>
            {{/if}}
            {{#if success}}
                <div class="alert alert-success">
                    <p>{{success}}</p>
                    <p>
                        <small>
                            {{__ "CheckSpamNotice"}}
                        </small>
                    </p>
                </div>
            {{/if}}

            {{#unless success}}
                <form action="/passwordrequest" method="post">
                    {{> passwordrequest/form-fields}}

                    <div class="form-row">
                        <div class="col-auto mt-5">
                            <button type="submit" class="btn btn-block btn-lg btn-primary">{{__ "Mail a new password"}}!</button>
                        </div>
                    </div>

                    <div class="mt-5">
                        <small>
                            {{__ "CheckSpamNotice"}}
                        </small>
                    </div>
                </form>
            {{/unless}}
        </div>
    </div>
</div>