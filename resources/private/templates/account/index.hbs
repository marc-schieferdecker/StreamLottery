<div class="content container mt-5 mb-5">
    <div class="row">
        <div class="col-12">
            <h1>
                {{title}}
            </h1>
            <small class="bg-light border border-dark p-1">{{__ "Available modules"}}</small>
        </div>
        <div class="col-12 mx-auto mt-5">
            <div class="row equal">
                {{!-- Manage lotterys --}}
                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 d-flex pb-3">
                    <div class="card w-100">
                        <a href="/lotterys"><img src="/images/manage-lotterys.jpg" class="card-img-top p-1"/></a>
                        <div class="card-body">
                            <h5 class="card-title"><a href="/lotterys">{{__ "Manage lotterys"}}</a></h5>
                            <div class="card-text">
                                <p>
                                    {{__ "Add, update or delete Lotterys and access the statistics."}}
                                </p>
                            </div>
                        </div>
                        <div class="text-right card-footer">
                            <a href="/lotterys" class="btn btn-sm btn-success">{{__ "open"}}</a>
                        </div>
                    </div>
                </div>

                {{!-- Publish lotterys --}}
                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 d-flex pb-3">
                    <div class="card w-100">
                        <a href="/lotterys/publish"><img src="/images/publish-lotterys.jpg" class="card-img-top p-1"/></a>
                        <div class="card-body">
                            <h5 class="card-title"><a href="/lotterys/publish">{{__ "Publish lotterys"}}</a></h5>
                            <div class="card-text">
                                <p>
                                    {{__ "Make lotterys available for your viewers and get an embed link for your streaming software."}}
                                </p>
                            </div>
                        </div>
                        <div class="text-right card-footer">
                            <a href="/lotterys/publish" class="btn btn-sm btn-success">{{__ "open"}}</a>
                        </div>
                    </div>
                </div>

                {{!-- Global setup --}}
                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 d-flex pb-3">
                    <div class="card w-100">
                        <a href="/setup"><img src="/images/global-setup.jpg" class="card-img-top p-1"/></a>
                        <div class="card-body">
                            <h5 class="card-title"><a href="/setup">{{__ "Global setup"}}</a></h5>
                            <div class="card-text">
                                <p>
                                    {{__ "Configure some global setup options for your lotterys."}}
                                </p>
                            </div>
                        </div>
                        <div class="text-right card-footer">
                            <a href="/setup" class="btn btn-sm btn-success">{{__ "open"}}</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>