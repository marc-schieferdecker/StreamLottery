<div class="content container mt-5 mb-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-5"><a href="/lotterys"><i class="fas fa-chevron-circle-left"></i></a> {{title}}</h1>
        </div>
        <div class="col-12 mx-auto">
            <form action="/lotterys/add" method="post">
                {{> lotterys/form-fields}}

                <div class="form-row mt-5">
                    <div class="col-auto">
                        <button type="submit" class="btn btn-block btn-lg btn-primary">{{__ "Create lottery"}}</button>
                    </div>
                    <div class="col-auto">
                        <a href="/lotterys" class="btn btn-block btn-lg btn-secondary">{{__ "Go back"}}</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>